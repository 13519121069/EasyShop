<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.fuicuiedu.idedemo.easyshop">

    <!--网络权限-->
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:name=".EasyShopApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".main.MainActivity"></activity>
        <activity android:name=".main.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />+1/**--

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!--登录-->
        <activity android:name=".user.LoginActivity" />
        <!--注册-->
        <activity android:name=".user.RegisterActivity"/>
        <!--用户名-->
        <activity android:name=".main.me.personInfo.PersonActivity"/>
        <!--用户昵称-->
        <activity android:name=".main.me.personInfo.NickNameActivity"/>

    </application>

</manifest>